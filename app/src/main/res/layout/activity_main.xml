<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




  <LinearLayout
     android:layout_width="match_parent"
     android:layout_height= "60dp"
      android:layout_alignParentButtom="true"
     app:layout_constraintBottom_toBottomOf="parent"
      android:background="@color/colorPrimary"
      android:layout_margin="10dp"
      android:padding="5dp"
      android:gravity="center"
      android:orientation="horizontal"
      android:elevation="5dp"
      android:layout_marginRight="15dp"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="15dp"
      android:layout_marginButtom="15dp"
     >

  <ImageView
      android:id="@+id/homeBttn"
      android:layout_width="wrap_content"
      android:layout_height= "wrap_content"
      android:layout_margin="10dp"
      android:padding="1dp"
      android:background="@color/colorPrimary"
      android:src="@drawable/ic_baseline_home_black"
      />

    <ImageView
        android:id="@+id/searchBttn"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_baseline_home_black"
        />

    <ImageView
        android:id="@+id/addBttn"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_baseline_home_black"
        />

    <ImageView
        android:id="@+id/notificationBttn"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_baseline_home_black"
        />

    <ImageView
        android:id="@+id/accountBttn"
        android:layout_width="wrap_content"
        android:layout_height= "wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_baseline_home_black"
        />









  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>